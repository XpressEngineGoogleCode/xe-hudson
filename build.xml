<?xml version="1.0" encoding="UTF-8"?>
 <project name="test" basedir="." default="app">
    <property name="builddir" value="${ws}/build" />
    <target name="prepare">
        <echo msg="Prepare..." />
        <mkdir dir="${builddir}" />
        <mkdir dir="${builddir}/logs" />
        <mkdir dir="${builddir}/logs/coverage" />
        <mkdir dir="${builddir}/docs" />
        <mkdir dir="${builddir}/app" />
    </target>
    <target name="clean">
        <echo msg="Clean..." />
        <delete dir="${builddir}" />
    </target>
	<target name="phpunit">
	   <exec executable="phpunit" dir="${basedir}/tests" failonerror="on">
	   </exec>
	</target>

</project>